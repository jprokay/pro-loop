{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "types": [
        "vinxi/types/client",
        "@cloudflare/workers-types/2023-07-01",
        "@testing-library/jest-dom"
    ],
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"],
    }
  }
}
